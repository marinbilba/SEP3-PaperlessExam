@page "/ExamManagement"
@inject NavigationManager NavigationManager
<h3>ExamManagement</h3>


<link rel="stylesheet" type="text/css" href="css/View/view.css">
<div class="container">
    <div class="row">
        
        <div class="col-md-5 red" @onclick="@ToCreateExam">
            <img src="images/plus.png" style="height: 120px; align-content: center"/>
          <h3><b>Create exam</b></h3>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5 red" @onclick="@ToViewExam">
             <img src="images/eye.png" style="height: 120px; align-content: center"/>
             <h3><b>View exams</b></h3>
        </div>
    </div>
</div>

@code {

    private void ToCreateExam()
    {
        NavigationManager.NavigateTo("/CreateExamEvent");
    }

    private void ToViewExam()
    {
        NavigationManager.NavigateTo("/ReviewExamEvents");
    }
    
}